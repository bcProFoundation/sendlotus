{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "baseUrl": "src",
    "paths": {
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}